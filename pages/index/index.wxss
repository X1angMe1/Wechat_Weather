/**index.wxss**/
.temp{
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;  /* 行高 */
  opacity: 0.8; /* 不透明度 */
}

.weather{
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65; /* 不透明度 */
}

.weather-wrapper{
  position: relative;
  padding-top: 174rpx; /*760 - 200 - 56*/
  padding-bottom: 250rpx;
}

.weather-bg{
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.timetips {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}

  .timetips-icon{
    margin-right: 10rpx;
    width: 36rpx;
    height: 28rpx;
  }

  .timetips-text{
    font-size: 30rpx;
    line-height: 42rpx;
  }

.time{
  display: flex;
}
.time-for{
  margin-top: 10rpx;
  align-items: center;
  width: 120rpx;
  font-size: 36rpx;
  line-height: 42rpx;
  flex-direction:column;
  flex-shrink: 0; /* 不强制压缩到屏幕内 */
}
.time-clock{
  font-size: 35rpx;
  line-height: 47rpx;
}
.time-icon{
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}
.time-temp{
  margin-top: 50rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}
